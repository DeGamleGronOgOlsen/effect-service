@page "/effect/all"
@using effectServiceAPI.Model
@model auctionServiceAPI.Pages.Effects.AllEffectsModel
@{
    ViewData["Title"] = "Alle Effekter";
}

<head>
    <link rel="stylesheet" href="/css/effect/AllEffects.css">
</head>

<h1>Alle Effekter</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<div class="mb-4">
    <form method="get">
        <div class="form-group">
            <label for="statusFilter">Filtrer efter status:</label>
            <select id="statusFilter" name="statusFilter" class="form-control" onchange="this.form.submit()">
                <option value="All" @(Model.StatusFilter == "All" ? "selected" : "")>Alle</option>
                <option value="InStock" @(Model.StatusFilter == "InStock" ? "selected" : "")>På lager</option>
                <option value="OnAuction" @(Model.StatusFilter == "OnAuction" ? "selected" : "")>På auktion</option>
                <option value="Sold" @(Model.StatusFilter == "Sold" ? "selected" : "")>Solgt</option>
            </select>
        </div>
    </form>
</div>

<div class="row">
    @foreach (var effect in Model.Effects)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(effect.Image))
                {
                    <img src="@effect.Image" class="card-img-top" alt="@effect.Title" style="height: 200px; object-fit: cover;">
                }
                else
                {
                    <div class="card-img-top bg-light text-center" style="height: 200px;">
                        <span class="align-middle">Intet billede</span>
                    </div>
                }
                <div class="card-body">
                    <h5 class="card-title">@effect.Title</h5>
                    <p class="card-text">@(effect.Description?.Length > 100 ? effect.Description.Substring(0, 100) + "..." : effect.Description)</p>
                    <p class="card-text">
                        <strong>Status:</strong>
                        <span class="badge @(effect.EffectStatus == EffectStatus.InStock ? "bg-success" : effect.EffectStatus == EffectStatus.OnAuction ? "bg-primary" : "bg-secondary")">
                            @effect.EffectStatus
                        </span>
                    </p>
                    <p class="card-text"><strong>Minimumspris:</strong> @effect.MinimumPrice kr.</p>
                </div>
                <div class="card-footer">
                    <a href="/effects/details/@effect.EffectId" class="btn btn-info">Detaljer</a>
                    @if (effect.EffectStatus == EffectStatus.InStock)
                    {
                        <a href="create/auction?effectId=@effect.EffectId" class="btn btn-primary">Opret Auktion</a>
                    }
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Effects.Any())
{
    <div class="alert alert-info">
        Der blev ikke fundet nogen effekter med den valgte status.
    </div>
}